<Window x:Class="IS_Doc.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ИКСКП" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Label Content="Имя пользователя" HorizontalAlignment="Left" Margin="50,46,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbLogin" HorizontalAlignment="Left" Height="23" Margin="50,77,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="186"/>
        <PasswordBox x:Name="pbPassword" HorizontalAlignment="Left" Margin="50,137,0,0" VerticalAlignment="Top" Width="186"/>
        <Button x:Name="bLogin" Content="Вход" HorizontalAlignment="Left" Margin="82,187,0,0" VerticalAlignment="Top" Width="121" Height="34" Click="bLogin_Click"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="50,106,0,0" VerticalAlignment="Top"/>
        <StackPanel x:Name="MessagePanel" HorizontalAlignment="Left" Height="62" Margin="10,10,0,0" VerticalAlignment="Top" Width="274" Orientation="Horizontal">
            <Image Source="Resources/Images/Alert.png" Height="36" HorizontalAlignment="Left" Width="36" IsHitTestVisible="False" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Top" Margin="0,3,0,0"/>
            <Label x:Name="labelMessage" Margin="0,0,0,0" Width="238"/>
        </StackPanel>

    </Grid>
</Window>
